<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="682.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AfficherOffres">
   <children>
      <TableView fx:id="tabview" layoutX="235.0" layoutY="60.0" onMouseClicked="#rowClicked" prefHeight="173.0" prefWidth="389.0">
        <columns>
          <TableColumn fx:id="colid" prefWidth="75.0" text="Id" />
          <TableColumn fx:id="colnom" prefWidth="87.0" text="Nom" />
            <TableColumn fx:id="colprix" prefWidth="54.0" text="Prix" />
            <TableColumn fx:id="colstat" prefWidth="84.0" text="Statut" />
            <TableColumn fx:id="coldesc" prefWidth="75.0" text="Description" />
        </columns>
      </TableView>
      <VBox fx:id="vb" layoutX="51.0" layoutY="32.0" prefHeight="305.0" prefWidth="161.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nom" />
            <TextField fx:id="nomup" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Prix" />
            <TextField fx:id="prixup" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Statut" />
            <ChoiceBox fx:id="dropup" prefWidth="150.0" />
             
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Description" />
            <TextField fx:id="descup" />
            <Button fx:id="updatebtn" mnemonicParsing="false" onAction="#updateOffre" text="Modifier" textFill="#115cbf" />
            <Button fx:id="ajouterbtn" mnemonicParsing="false" onAction="#addOffre" text="Ajouter" textFill="#115cbf">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
      <Button fx:id="deleteup" layoutX="576.0" layoutY="269.0" mnemonicParsing="false" onAction="#onDelete" text="Supprimer" textFill="#115cbf" />
   </children>
</AnchorPane>
